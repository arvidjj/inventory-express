<!-- views/items.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <a href="/items/new"><strong>+ New Item</strong></a>
  <ul>
    <% items.forEach(item => { %>
        <li><a href="/items/<%= item._id %>"><strong>Name:</strong> <%= item.item_name %></a>
        <%= item.quantity %> - <%= item.price %> - <%= item.category %></li>
    <% }); %>
  </ul>
</body>
</html>
