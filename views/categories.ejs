<!-- views/categories.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <a href="/categories/new"><strong>+ New Category</strong></a>
  <ul>
    <% category_list.forEach(category => { %>
      <li>
        <a href="/categories/<%= category._id %>"><strong>Name:</strong> <%= category.category_name %></a>
      </li>
    <% }); %>
  </ul>
</body>
</html>
